<style>
pre::-webkit-scrollbar {
  width: 5px;
  height: 10px;
  background-color:#F5F5F5;
}
/* Definir la pista de la barra de desplazamiento
   1 sombra interior + esquinas redondeadas. */
pre::-webkit-scrollbar-track {
  background-color:#F5F5F5;
}
/* definir control deslizante
   13 sombra interior + esquinas redondeadas. */
pre::-webkit-scrollbar-thumb {
  background-color: rgb(69, 83, 100);
}

pre:active {
  background-color: rgb(81, 95, 116);
}
</style>

<div class="article-container">
  <div class="article">
    <h1 class="article-title"><%- post.title %></h1>
    <div class="article-info">
      <div class="article-info--item">
        <div class="article-info--info">
          <% if (post.categories) { %>
          <div class="article-info--categories">
            <span>Clasificación：</span>
            <%- list_categories(post.categories, {
              show_count: false,
              style: false,
              transform(str) {
                return titlecase(str);
              }
            }) %>
          </div>
          <% } %>
          <% if (post.tags) { %>
          <div class="article-info--tags">
            <span>Etiqueta：</span>
            <%- post.tags ? list_tags(post.tags, { style: false, show_count: false, separator: '' }) : '' %>
          </div>
          <% } %>
          <p class="article-info--date">Etiqueta：<%- date(post.date, 'YYYY-MM-DD HH:mm:ss') %></p>
        </div>
        <img src="<%- url_for(post.cover || '/imgs/default-cover.webp') %>" alt="" class="article-cover">
      </div>
    </div>
    <article class="article-content">
      <%- post.content %>
    </article>
    <% if (theme.comments.enable) { %>
    <div class="read-nums">
      <!-- id 将作为查询条件 -->
      <span id="<%- post.path %>" class="leancloud_visitors" data-flag-title="Your Article Title">
        <em class="post-meta-item-text">Vistas:</em>
        <i class="leancloud-visitors-count"></i>
      </span>
    </div>
    <div class="comments-intro">
      <h2>Área de comentarios</h2>
      <p>Sientete bienvenido para dejar tus comentarios.</p>
    </div>
    <div id="vcomments" class="vcomments"></div>
    <% } %>
  </div>
  <div class="article-catelogue">
    <div class="article-catelogue--wrapper">
      <div class="catelogue catelogue-1">
        <h3>Tabla de contenido</h3>
        <%- toc(post.content) %>
      </div>
      <% if (page.prev || page.next) { %>
        <div class="catelogue catelogue-2">
          <% if (page.prev) { %>
            <p>
              <span>Anterior：</span>
              <a href="/<%- page.prev.path -%>"><%- page.prev.title -%></a>
            </p>
          <% } %> 
          <% if (page.next) { %>
            <p>
              <span>Próximo: </span>
              <a href="/<%- page.next.path -%>"><%- page.next.title -%></a>
            </p>
          <% } %>
        </div>
      <% } %>
    </div>
  </div>
</div>

<script src="<%- url_for('js/prism.js') %>"></script>
<% if (theme.comments.enable) { %>
<script>
  // definición de var para evitar errores de declaración repetidos causados
  // por el reingreso de pjax.
  var config = JSON.parse('<%- JSON.stringify(theme.comments) %>')
  new Valine({
    el: '#vcomments',
    appId: config.appId,
    appKey: config.appKey,
    placeholder: config.placeholder,
    meta: config.meta,
    recordIP: config.recordIP,
    visitor: config.visitor,
    enableQQ: config.enableQQ,
    path: '<%- post.path %>'
  })
</script>
<% } %>

